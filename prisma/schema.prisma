// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int         @id @default(autoincrement())
  object      String
  actor_id    String
  actor_name  String
  group       String
  action      Json
  target_id   String
  target_name String
  location    String
  occurred_at String
  metadata    Json  
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt

  @@index([actor_name])
}
