// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model EventAction {
  id     String  @id @default(uuid())
  object String
  name   String
  Event  Event[]
}

model Metadata {
  id           Int     @id @default(autoincrement())
  redirect     String
  description  String
  x_request_id String
  Event        Event[]
}

model Event {
  id          Int         @id @default(autoincrement())
  object      String
  actor_id    String
  actor_name  String
  group       String
  action_id   String
  action      EventAction @relation(fields: [action_id], references: [id])
  target_id   String
  target_name String
  location    String
  occurred_at String
  metadata_id Int
  metadata    Metadata    @relation(fields: [metadata_id], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([actor_name])
}
